<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
    <VBox>
        <form:SimpleForm title="{user>/userName}">
            <form:content>
                <Label text="ID" />
                <Text text="{user>/id}" />
                <Label text="userName" />
                <Text text="{user>/userName}" />
                <Label text="emails" />
                <Text text="{user>/emails/0/value}" />
                <Label text="생성시간" />
                <Text text="{user>/meta/created}" />
                <Label text="마지막 업데이트" />
                <Text text="{user>/meta/lastModified}" />
            </form:content>
        </form:SimpleForm>
        <List id="collectionsTable" items="{user>/groups}" mode="Delete" delete="onDeleteUserRole" class="sapUiSmallMarginBottom">
            <headerToolbar>
                <OverflowToolbar>
                    <Text text="역할 컬렉션 ({= ${user>/groups} ? ${user>/groups}.length : '0'})"/>
                    <ToolbarSpacer/>
                    <Button text="역할 컬렉션 추가" press="onOpenDialog" enabled="{permission}">
                        <customData>
                            <core:CustomData key="RoleCollectionsDialog" value="addCollection"/>
                        </customData>
                    </Button> 
                </OverflowToolbar>
            </headerToolbar>
            <items>
                <StandardListItem title="{user>value}" />
            </items>
        </List>
    </VBox>
</core:FragmentDefinition>