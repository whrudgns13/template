<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <SelectDialog
        title="Users"
        confirm="onAddUserRole"
        cancel="onClose"
        items="{users>/filter}"
        search="onRoleSearch"
        multiSelect="true"
    >
    <StandardListItem
        title="{users>id}"
        description="{users>emails/0/value}"
        type="Active" />
    </SelectDialog>
</core:FragmentDefinition>